@using Andrei15193.Edesia.Models;
@using Andrei15193.Edesia.Resources;
@{
	Layout = null;
}
<nav class="navigation-bar fixed-top green" style="border:1px solid white; border-width: 0 0 1px;">
	<nav class="navigation-bar-content">
		<a href="@Url.Action("Default", "Product")" class="element">
			<strong>@ApplicationControllerStrings.ApplicationName</strong>
		</a>
		<span class="element-divider"></span>
		<a href="@Url.Action("Default", "ShoppingCart")" class="element">
			<i class="icon-cart-2"></i> <span id="@HtmlElementId.ShoppingCartTotalPrice"></span> RON (<span id="@HtmlElementId.ShoppingCartCount"></span>)
		</a>
		<span style="float: right;">
			@if (User != null)
			{
				if (User.IsInRole<Employee>())
				{
					<a href="@Url.Action("Dashboard", "DeliveryTask")" class="element">@UserControllerStrings.DashboardMenuItemButton_DisplayName (<span id="@HtmlElementId.PendingTasksCount"></span>)</a>
					<span class="element-divider"></span>
				}
				if (User.IsInRole<Administrator>())
				{
					<a href="@Url.Action("Default", "Delivery")" class="element">@UserControllerStrings.PlanDeliveriesMenuItemButton_DisplayName (<span id="@HtmlElementId.PendingOrdersCount"></span>)</a>
					<span class="element-divider"></span>
				}
				<a href="@Url.Action("Logout", "User")" class="element"><i class="icon-user"></i> @UserControllerStrings.LogoutMenuItemButton_DisplayName <small>(@User.FirstName @User.LastName)</small></a>
			}
			else
			{
				<a href="@Url.Action("Login", "User")" class="element"><i class="icon-user"></i> @UserControllerStrings.LoginMenuItemButton_DisplayName</a>
				<span class="element-divider"></span>
				<a href="@Url.Action("Register", "User")" class="element"><i class="icon-new"></i> @UserControllerStrings.RegisterMenuItemButton_DisplayName</a>
			}
		</span>
	</nav>
</nav>
