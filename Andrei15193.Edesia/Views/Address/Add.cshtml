@using Andrei15193.Edesia.Resources;
@model Andrei15193.Edesia.ViewModels.Address.AddAddressViewModel
@{
	ViewBag.Title = AddressControllerStrings.AddAddressViewTitle;
}
<div class="grid fluid">
	<div class="row">
		<div class="span4 offset4">
			<h1>@AddressControllerStrings.AddAddressViewTitle</h1>
			@using (Html.BeginForm())
			{
				@Html.LabelFor(model => model.Address)
				@Html.Partial("_ModelErrorNotice", ViewData.ModelState["Address"])
				<div class="input-control text">
					@Html.EditorFor(model => model.Address)
				</div>
				<input class="action" type="submit" value="@AddressControllerStrings.AddAddressButton_DisplayName" />
				<a class="button cancelAction" href="@Url.Action("Default", "Delivery")">@AddressControllerStrings.CancelButton_DisplayName</a>
			}
		</div>
	</div>
</div>