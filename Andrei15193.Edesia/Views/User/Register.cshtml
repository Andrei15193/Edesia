@model Andrei15193.Edesia.ViewModels.User.RegisterViewModel
@{
	ViewBag.Title = LanguageResource.RegisterLabel;
}
<div class="grid fluid">
	<div class="row">
		<div class="span4 offset4">
			<h1>@LanguageResource.RegisterLabel</h1>
			@using (Html.BeginForm())
			{
				@Html.LabelFor(model => model.EMail)
				<div class="input-control text">
					@Html.EditorFor(model => model.EMail)
				</div>
				<div class="input-control text">
					@Html.EditorFor(model => model.EMailCopy)
				</div>
				@Html.LabelFor(model => model.Password)
				<div class="input-control text">
					@Html.EditorFor(model => model.Password)
				</div>
				<div class="input-control text">
					@Html.EditorFor(model => model.PasswordCopy)
				</div>
				<input type="submit" class="action" value="@LanguageResource.RegisterNextStepLabel" />
			}
		</div>
	</div>
</div>