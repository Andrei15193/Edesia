@using Andrei15193.Edesia.Resources;
@model Andrei15193.Edesia.ViewModels.User.LoginViewModel
@{
	ViewBag.Title = LoginViewStrings.ViewTitle;
}
<div class="grid fluid">
	<div class="row">
		<div class="span4 offset4">
			<h1>@LoginViewStrings.ViewTitle</h1>
			@using (Html.BeginForm())
			{
				@Html.LabelFor(model => model.EMailAddress)
				@Html.Partial("_ModelErrorNotice", ViewData.ModelState["EMailAddress"])
				<div class="input-control text">
					@Html.EditorFor(model => model.EMailAddress)
				</div>
				@Html.LabelFor(model => model.Password)
				@Html.Partial("_ModelErrorNotice", ViewData.ModelState["Password"])
				<div class="input-control password">
					@Html.EditorFor(model => model.Password)
				</div>
				<input class="action" type="submit" value="@LoginViewStrings.SubmitButton_DisplayName" />
			}
		</div>
	</div>
</div>