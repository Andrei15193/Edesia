@using Andrei15193.Edesia.Resources;
@model Andrei15193.Edesia.Models.DeliveryZone
<div class="accordion with-marker" data-role="accordion">
	<div class="accordion-frame">
		<a class="heading" style="cursor: pointer;">
			@if (!Model.Addresses.Any())
			{
				<span class="fg-red"><i class="icon-warning"></i> @ErrorStrings.DeliveryZoneAddressesListBox_NoValues</span><br />
			}
			@if (Model.Assignee == null)
			{
				<span class="fg-red"><i class="icon-warning"></i> @ErrorStrings.DeliveryZoneAssigneeListBox_NoValues</span><br />
			}
			<i class="icon-stop" style="color: @Model.Colour.ToString();"></i> @Model.Name
		</a>
		<div class="content">
			@if (Model.Assignee != null)
			{
				<small>
					@string.Format(DeliveryZoneViewStrings.ResponsibleLabel_DisplayName_Format, Model.Assignee.FirstName, Model.Assignee.LastName, Model.Assignee.TransportCapacity)
				</small>
			}
			<ul>
				@foreach (string address in Model.Addresses)
				{
					<li>@address</li>
				}
			</ul>
		</div>
	</div>
</div>