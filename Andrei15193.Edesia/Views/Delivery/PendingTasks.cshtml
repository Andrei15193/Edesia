@using Andrei15193.Edesia.Resources;
@using Andrei15193.Edesia.Models;
@model IEnumerable<DeliveryTask>
@{
	Layout = null;
}
<div class="grid fluid">
	<div class="row">
		<div class="span12">
			<h2>@DeliveryPlanningViewStrings.PendingDeliveriesLabel_DisplayName</h2>
		</div>
	</div>
	<div class="row">
		<div class="span12">
			<a class="command-button action disabled" style="width: 100%;">
				<i class="icon-cancel on-left"></i>
				@DeliveryPlanningViewStrings.CancelPendingTransportsButton_DisplayName
				<small>@DeliveryPlanningViewStrings.CancelPendingTransportsButton_Hint</small>
			</a>
		</div>
	</div>
	<div class="row">
		<div class="span12">
			@foreach (DeliveryTask deliveryTask in Model)
			{
				<div class="accordion with-marker" data-role="accordion">
					<div class="accordion-frame">
						<a class="heading" style="cursor: pointer;">
							<i class="icon-stop" style="color: @deliveryTask.DeliveryZone.Colour.ToString();"></i> Transport #@deliveryTask.DeliveryTaskNumber
						</a>
						<div class="content">
							<p>
								<small>@DeliveryPlanningViewStrings.DeliveryStateLabel_DisplayName: scheduled</small><br />
								<strong>@DeliveryPlanningViewStrings.OrdersLabel_DisplayName:</strong>
								<ul>
									@foreach (Order order in deliveryTask.OrdersToDeliver)
									{
										<li>@(string.Format(DeliveryPlanningViewStrings.OrderListItemLabel_DisplayName_Format, order.OrderNumber, order.DeliveryAddress))</li>
									}
								</ul>
							</p>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>