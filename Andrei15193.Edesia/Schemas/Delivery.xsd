<?xml version="1.0" encoding="utf-8" ?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
			xmlns:delivery="http://storage.andrei15193.ro/public/schemas/Edesia/Delivery.xsd"
			targetNamespace="http://storage.andrei15193.ro/public/schemas/Edesia/Delivery.xsd"
			elementFormDefault="qualified">
	<xsd:element name="DeliveryMapping">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="DeliveryZone"
							 type="delivery:DeliveryZone"
							 minOccurs="0"
							 maxOccurs="unbounded" />
				<xsd:element name="Address"
							 type="xsd:string"
							 minOccurs="0"
							 maxOccurs="unbounded" />
			</xsd:sequence>
		</xsd:complexType>
		<xsd:unique name="UniqueAddresses">
			<xsd:selector xpath=".//delivery:Address" />
			<xsd:field xpath="." />
		</xsd:unique>
		<xsd:unique name="UniqueDeliveryZoneNames">
			<xsd:selector xpath="delivery:DeliveryZone" />
			<xsd:field xpath="@Name" />
		</xsd:unique>
	</xsd:element>

	<xsd:complexType name="DeliveryZone">
		<xsd:sequence>
			<xsd:element name="Address"
						 type="xsd:string"
						 minOccurs="0"
						 maxOccurs="unbounded" />
		</xsd:sequence>
		<xsd:attribute name="Name"
					   type="xsd:string"
					   use="required" />
		<xsd:attribute name="Colour"
					   use="required">
			<xsd:simpleType>
				<xsd:restriction base="xsd:string">
					<xsd:pattern value="#[0-9A-Fa-f]{6}" />
				</xsd:restriction>
			</xsd:simpleType>
		</xsd:attribute>
	</xsd:complexType>
</xsd:schema>